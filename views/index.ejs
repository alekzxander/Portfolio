<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <link href="./css/style.css" rel="stylesheet">
    <title>Portfolio</title>
</head>

<body>
    <header id="acceuil">
        <nav id="myNav-fixed" class="navbar navbar-expand-lg navbar-light bg-light fixed-top">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse justify-content-end container" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link scroll" href="#acceuil">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link scroll" href="#hook-skill">Mes compétences</a>
                    </li>
                    <li>
                        <a class="nav-link scroll" href="#projet">Mes projets</a>
                        <a href=""></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link scroll" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>

        <ul class="text-animate hidden">
            <li>A</li>
            <li>L</li>
            <li>E</li>
            <li>K</li>
            <li>Z</li>
            <li>X</li>
            <li>A</li>
            <li>N</li>
            <li>D</li>

        </ul>
        <div class="fadein-text">
            <h2>Web developpeur junior</h2>
            <h3>Full stack</h3>
            <div class="presentation">
                <p>
                    <%= pres.content %>
                </p>
            </div>
        </div>
    </header>
    <div id="competence" data-midnight="blue">
        <div class="container">
            <div class="all-skill" id="hook-skill">
                <div class="row">
                    <% skills.forEach((skill, i) => { %>
                        <div class="col-md-4 skill<%=i%>">
                            <p><img src="images/skill<%=i%>.svg" alt=""></p>

                            <h3>
                                <%= skill.title %>
                            </h3>
                            <p>
                                <%= skill.content %>
                            </p>
                            <h6>Languages</h6>
                            <ul>
                                <% skill.languages.forEach((lang) => { %>
                                    <li>
                                        <%= lang %>
                                    </li>
                                    <% }) %>
                            </ul>

                        </div>
                        <% }) %>
                </div>
            </div>
            <div class="tools">
                <h6>Mes outils de dev</h6>
                <ul>
                    <li>VS code</li>
                    <li>Gitlab</li>
                    <li>Github</li>
                    <li>Terminal</li>
                    <li>Npm packages</li>
                    <li>PhpMyAdmin</li>
                    <li>Robot3T</li>
                    <li>MySQLWorkbench</li>
                    <li>Stack overflow</li>
                    <li>Codepen</li>
                </ul>
            </div>
            <div class="packages">
                <h6>Mes librairies préférées</h6>
                <ul>
                    <li>MomentJs</li>
                    <li>Express</li>
                    <li>Nodemailer</li>
                    <li>Mongoose</li>
                    <li>Sequelize</li>
                    <li>Nodemon</li>
                    <li>Morgan</li>
                    <li>React-redux</li>
                    <li>Bootstrap</li>
                    <li>Sass</li>
                </ul>
            </div>
            <div class="mask-circle"></div>
        </div>
    </div>
    <div id="projet" data-midnight="dark">
        <div class="container">
            <h1>Mes projets</h1>
            <div class="row">
                <% works.forEach((work) => { %>
                    <div class="col-md-4 work">
                        <a href="<%= work.link %>">
                            <div class="card-mask">
                                <p>
                                    <%= work.title %>
                                </p>
                                <h5>Visiter</h5>
                            </div>
                        </a>
                        <img src="images/<%= work.picture %>" alt="<%= work.title %>">
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <div id="contact">
        <h1>Contatez moi </h1>
        <div class="container">
            <div class="contact-form">
                <form id="contact-us" method="post" action="/email">
                    <div class="row">
                        <div class="col-md-6 " data-wow-delay=".5s">
                            <input type="text" name="name" id="name" required="required" class="form" placeholder="Nom & prenom" />
                            <input type="email" name="email" id="email" required="required" class="form" placeholder="Email" />
                            <input type="text" name="subject" id="subject" required="required" class="form" placeholder="Sujet" />
                        </div>
                        <div class="col-md-6 " data-wow-delay=".5s">
                            <textarea name="message" id="message" class="form textarea" placeholder="Message"></textarea>
                        </div>
                        <div class="clear"></div>

                    </div>
            </div>
            <p class="text-center"><button type="submit" id="submit" name="submit" class="form-btn">Send Message</button></p>

            </form>
            <div class="mail-message-area">
                <div class="alert gray-bg mail-message not-visible-message">
                    <strong>Merci !</strong> Vôtre mail à bien etait envoyé.
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 happy-face">
                    <img src="images/smug.svg" class="smug" alt="">
                </div>
                <div class="col-md-4">
                    <ul>
                        <li class="facebook"><a href="https://www.facebook.com/alexandre.callens.90?ref=bookmarks"><img src="images/facebook.svg" alt="lien facebook"></a></li>
                        <li class="twitter"><a href="https://twitter.com/alekzxand"><img src="images/twitter.svg" alt="lien twitter"></a></li>
                        <li class="linkedin"><a href="https://www.linkedin.com/in/alexandre-callens-083364148"><img src="images/linkedin.svg" alt="lien linkedin"></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- <div>Icons made by <a href="https://www.freepik.com/" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/"
                title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0"
                target="_blank">CC 3.0 BY</a></div> -->
    </footer>

</body>
<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
<script src="./js/midnight.jquery.min.js"></script>
<script src="./js/script.js"></script>

</html>